rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Коллекция идей
    match /ideas/{ideaId} {
      // Чтение разрешено всем
      allow read: if true;
      
      // Запись разрешена только аутентифицированным пользователям
      allow create: if request.auth != null;
      allow update: if request.auth != null;
      allow delete: if false; // Удаление запрещено
    }
    
    // Коллекция голосов
    match /votes/{voteId} {
      // Чтение разрешено всем
      allow read: if true;
      
      // Запись разрешена только аутентифицированным пользователям
      allow create: if request.auth != null && 
        request.resource.data.userId == request.auth.uid;
      allow update, delete: if false;
    }
    
    // Ограничение на количество голосов (3 на пользователя)
    function userHasLessThanThreeVotes() {
      let votes = getAfter(/databases/$(database)/documents/votes).data();
      let userVotes = votes[request.auth.uid];
      return userVotes == null || userVotes < 3;
    }
  }
}
